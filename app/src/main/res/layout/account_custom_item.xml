<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postCard"
    android:layout_width="140dp"
    android:layout_height="190dp"
    android:elevation="4dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="20dp"

    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/postImg"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/milk" />


        <ImageButton
            android:id="@+id/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/postImg"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/delete" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/edit"-->
        <!--            android:layout_width="20dp"-->
        <!--            android:layout_height="25dp"-->
        <!--            android:layout_below="@+id/postImg"-->
        <!--            android:layout_gravity="right"-->
        <!--            android:layout_marginStart="6dp"-->
        <!--            android:layout_marginTop="0dp"-->
        <!--            android:layout_toEndOf="@+id/delet"-->
        <!--            android:background="@drawable/write"-->
        <!--            android:contentDescription="fav"-->
        <!--            android:minWidth="48dp"-->
        <!--            android:padding="5dp" />-->
        <!--                android:layout_marginLeft=""-->


        <TextView
            android:id="@+id/postNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postImg"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="4dp"
            android:layout_toStartOf="@+id/delete"
            android:text="Chocolate Milk"
            android:textColor="#000000"
            android:textSize="10dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>