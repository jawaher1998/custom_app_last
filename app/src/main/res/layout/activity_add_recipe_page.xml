    <EditText
        android:id="@+id/addpname"
        android:layout_width="341dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:ems="10"
        android:hint="Recipe name"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343" />



    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="337dp"
        android:layout_height="36dp"
        android:background="@drawable/manager_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627">

        <Spinner
            android:id="@+id/spinnerD"
            android:layout_width="341dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="0dp"
            android:addStatesFromChildren="false"
            android:spinnerMode="dropdown"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="589dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonIng"
        android:layout_width="341dp"
        android:layout_height="36dp"
        android:background="@drawable/custom_button"
        android:onClick="resIng"
        android:text="Recipe ingredients"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.735" />


    <Button
        android:id="@+id/addp"
        android:layout_width="341dp"
        android:layout_height="36dp"
        android:background="@drawable/manager_button"
        android:text="Add"
        android:onClick="add_post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/howtomake"
        android:layout_width="341dp"
        android:layout_height="79dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="60dp"
        android:ems="10"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:gravity="start|bottom"
        android:hint="How to make it"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view_add_recipe"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="0dp"
        android:background="#D2DCBE"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />



