<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="#F6FDEE"
    >
    <ImageButton
        android:id="@+id/previousButtonSing"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="#00FFFFFF"
        android:paddingLeft="10dp"
        android:contentDescription="go back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foregroundGravity="right"
        android:layout_marginStart="390dp"
        android:paddingTop="50dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/graditecircle"

            ></ImageView>
    </LinearLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="left"
        android:text="Create Accou"
        android:textColor="#4CAF50"
        android:textSize="40dp"
        android:layout_marginStart="-49dp"
        app:layout_constraintBottom_toTopOf="@+id/userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="left"
        android:layout_marginTop="65dp"
        android:text="nt"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:layout_marginStart="167dp"
        app:layout_constraintBottom_toTopOf="@+id/userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        />





<EditText
    android:id="@+id/userName"
    android:layout_width="263dp"
    android:layout_height="48dp"
    android:layout_marginTop="65dp"
    android:layout_marginStart="70dp"
    android:ems="10"
    android:hint="Enter your Full Name"
    android:textSize="18sp"
    android:inputType="textPersonName"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView6" />

<EditText
    android:id="@+id/pass"
    android:layout_width="263dp"
    android:layout_height="48dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="70dp"
    android:ems="10"
    android:hint="Enter the Password"
    android:textSize="18sp"
    android:inputType="textPassword"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/userName" />

<EditText
    android:id="@+id/email"
    android:layout_width="263dp"
    android:layout_height="48dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="70dp"
    android:ems="10"
    android:hint="Enter your Email"
    android:textSize="18sp"
    android:inputType="textEmailAddress"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/pass" />

<EditText
    android:id="@+id/phone"
    android:layout_width="263dp"
    android:layout_height="48dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="70dp"
    android:ems="10"
    android:hint="Enter your Phone Number"
    android:textSize="18sp"
    android:inputType="phone"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/signUpBut"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gradiatbtn"
        android:drawablePadding="10dp"
        android:text="Sign up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone" />
    <LinearLayout
        android:id="@+id/textlinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpBut" >


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
       />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/textlinear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/textlinear"
        app:layout_constraintBottom_toBottomOf="@+id/textlinear"
        app:layout_constraintTop_toTopOf="@+id/textlinear"
>

    <Button
            android:id="@+id/signInBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#02FFFFFF"
            android:text="Login here"
            android:textColor="#4CAF50"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/textlinear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textlinear"
        android:foregroundGravity="bottom|left"
        android:layout_marginStart="-255dp"
        android:layout_marginBottom="-60dp"
        android:paddingRight="25dp"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/graditecircle"

            ></ImageView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>