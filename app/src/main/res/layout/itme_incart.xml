<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >


    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/prodectimage"
        android:text="Item Name"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/prodectimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_menu_gallery" />

    <TextView
        android:id="@+id/priceitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/prodectimage"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="10 RS"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp">



        <Button
            android:id="@+id/remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/item_title"
            android:layout_alignParentEnd="true"
            android:text="-"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/quantetitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_alignStart="@+id/addprodect"


            android:layout_toStartOf="@+id/remove"
            android:gravity="center"
            android:text="[100000]" />

        <Button
            android:id="@+id/addprodect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/item_title"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/remove"
            android:text="+"
            android:textColor="@color/black" />

    </LinearLayout>


</RelativeLayout>